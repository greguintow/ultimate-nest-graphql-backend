  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "dev": "nest start --watch --watchAssets",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest --verbose",
    "test:watch": "jest --verbose --watch",
    "test:cov": "jest --verbose --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "yarn test:docker:up && env-cmd -f .env.test yarn prisma:migrate:init && env-cmd -f .env.test jest --config ./test/jest-e2e.config.ts && yarn test:docker:down",
    "test:docker:up": "docker-compose -f docker-compose-test.yml up -d",
    "test:docker:down": "docker-compose -f docker-compose-test.yml down",
    "prisma:generate": "prisma generate",
    "studio": "prisma studio",
    "studio:test": "env-cmd -f .env.test prisma studio",
    "db:migrate": "prisma migrate dev",
    "prisma:migrate:init": "prisma migrate dev --name init",
    "db:deploy": "prisma migrate deploy"
  },
  "dependencies": {
    "@nestjs/common": "^8.0.0",
    "@nestjs/core": "^8.0.0",
    "@nestjs/cqrs": "^8.0.0",
    "@nestjs/graphql": "npm:@greguintow/nestjs-graphql",
    "@nestjs/jwt": "^8.0.0",
    "@nestjs/platform-express": "^8.0.0",
    "@prisma/client": "^3.0.1",
    "apollo-server-express": "npm:@greguintow/apollo-server-express@latest",
    "bcryptjs": "^2.4.3",
    "class-transformer": "^0.4.0",
    "class-validator": "^0.13.1",
    "graphql": "^15.5.0",
    "nestjs-i18n": "npm:@greguintow/nestjs-i18n",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^7.2.0"
  },
  "devDependencies": {
    "@golevelup/nestjs-testing": "^0.1.2",
    "@nestjs/cli": "^8.0.0",
    "@nestjs/schematics": "^8.0.0",
    "@nestjs/testing": "^8.0.0",
    "@types/bcryptjs": "^2.4.2",
    "@types/express": "^4.17.13",
    "@types/faker": "^5.5.8",
    "@types/jest": "^27.0.1",
    "@types/jest-when": "^2.7.3",
    "@types/node": "^16.0.0",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^4.29.3",
    "@typescript-eslint/parser": "^4.29.3",
    "env-cmd": "^10.1.0",
    "eslint": "^7.30.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-airbnb-typescript": "^14.0.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-import-resolver-typescript": "^2.4.0",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-jest": "^24.4.2",
    "eslint-plugin-prettier": "4.0.0",
    "faker": "^5.5.3",
    "git-commit-msg-linter": "^3.1.0",
    "jest": "27.1.0",
    "jest-when": "^3.4.0",
    "prettier": "^2.3.2",
    "prisma": "^3.1.1",
    "supertest": "^6.1.3",
    "ts-jest": "^27.0.3",
    "ts-loader": "^9.2.3",
    "ts-node": "^10.0.0",
    "tsconfig-paths": "^3.10.1",
    "typescript": "^4.3.5"
  }
